<section>
   <h2>Create New Post</h2>

   <form class="new-post-form">
      <div>
         <label for="post-title"><h3>Title</h3></label>
         <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
         <label for="post-url"><h3>Content</h3></label>
         <textarea id="post-url" name="post-url" /></textarea>
      </div>
      <button type="submit" class="btn">Create</button>
   </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
    <div>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" ><button>Edit</button></a>
    </div>
    {{/each}}
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
<script src="/javascript/delete-post.js"></script>